@model List<CCMS.Models.Department>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Departments</h1>
<p><a asp-controller="Department" asp-action="Add">Add Department</a></p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    <tbody id="departments">
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>@department.Description</td>
            </tr>
        }
    </tbody>
</table>

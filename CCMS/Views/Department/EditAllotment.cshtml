@model CCMS.Models.Allotment
@{
    ViewData["Title"] = "EditAllotment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditAllotment</h1>

<form asp-controller="Department" asp-action="EditAllotment" method="post">

    <div class="form-group">
        <label asp-for="Department.Name">Department</label>
        <input class="form-control" asp-for="Department.Name" disabled />
        <span asp-validation-for="Department.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date" disabled />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Allowed"></label>
        <input class="form-control" asp-for="Allowed" />
        <span asp-validation-for="Allowed"></span>
    </div>

    <input type="submit" value="Save" />

</form>
@model CCMS.Models.SchedulePattern
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Schedule Pattern</h1>

<form asp-controller="SchedulePattern" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    @*<div class="form-group">
    </div>*@
    <div class="form-group">
        <table class="table">
            <tr>
                <th>WeekNumber</th>
                <th>Day of Week</th>
                <th>Time In</th>
                <th>Time Out</th>
            </tr>
            <tbody id="SchedulePatternRows">
                <tr>
                    <td><input class="form-control" asp-for="@Model.Rows[0].WeekNumber" /></td>
                    <td>
                        <table class="table-sm">
                            <tr>
                                <td class="small">M</td>
                                <td class="small">T</td>
                                <td class="small">W</td>
                                <td class="small">R</td>
                                <td class="small">F</td>
                                <td class="small">S</td>
                                <td class="small">U</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Mon" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Tue" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Wed" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Thu" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Fri" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Sat" /></td>
                                <td><input type="checkbox" asp-for="@Model.Rows[0].Sun" /></td>
                            </tr>
                        </table>
                    </td>
                    <td><input class="form-control" type="datetime" asp-for="@Model.Rows[0].TimeIn" /></td>
                    <td><input class="form-control" type="datetime" asp-for="@Model.Rows[0].TimeOut" /></td>
                </tr>
            </tbody>
        </table>
    </div>

    <input type="submit" value="Add Schedule Pattern" />

</form>

